{
  "name": "loomp3r",
  "version": "1.0.0",
  "repository": "https://github.com/spudtrooper/loomp3r.git",
  "author": "Jeff Palm <jeff@jeffpalm.com>",
  "license": "MIT",
  "homepage": "https://spudtrooper.github.io/loomp3r",
  "scripts": {
    "build": "parcel build --dist-dir dist --public-url . src/index.html",
    "build:gh": "parcel build --dist-dir dist-gh --public-url /loomp3r src/index.html",
    "clean": "rm -rf dist",
    "dev": "parcel serve src/index.html",
    "dev:open": "yarn parcel serve src/index.html --open",
    "test": "echo \"Error: no test specified\" && exit 1",
    "predeploy": "yarn build:gh",
    "deploy": "gh-pages -d dist-gh"
  },
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "parcel": "^2.11.0"
  },
  "dependencies": {
    "wavesurfer.js": "^7.6.4"
  }
}