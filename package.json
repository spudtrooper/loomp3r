{
  "name": "loomp3r",
  "version": "1.0.0",
  "repository": "https://github.com/spudtrooper/loomp3r.git",
  "author": "Jeff Palm <jeff@jeffpalm.com>",
  "license": "MIT",
  "homepage": "https://spudtrooper.github.io/loomp3r",
  "scripts": {
    "reinstall": "rm -rf node_modules yarn.lock .parcel-cache && yarn install",
    "prebuild": "yarn reinstall && yarn clean",
    "prebuild:gh": "yarn reinstall && yarn clean:gh",
    "_build": "yarn parcel build --dist-dir dist/web --public-url .  --log-level verbose src/index.html",
    "_build:gh": "yarn parcel build --dist-dir dist/gh --public-url '/loomp3r' --log-level verbose src/index.html",
    "build": "yarn _build",
    "build:gh": "yarn _build:gh",
    "clean": "rm -rf dist/web .parcel-cache",
    "clean:gh": "rm -rf dist/gh  .parcel-cache",
    "dev": "parcel serve src/index.html",
    "dev:open": "yarn parcel serve src/index.html --open",
    "test": "echo \"Error: no test specified\" && exit 1",
    "predeploy": "yarn build:gh",
    "deploy": "gh-pages -d dist/gh"
  },
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "parcel": "^2.11.0"
  },
  "dependencies": {
    "wavesurfer.js": "^7.6.4"
  }
}